{
    "index_patterns": ["kaggle-ecommerce-*"],
    "template": {
        "settings": {
            "number_of_shards": 3
        },
        "mappings": {
            "_source": {
                "enabled": true
            },
            "properties": {
                "event_type": {
                    "type": "keyword",
                    "ignore_above": 256
                },
                "product_id": {
                    "type": "long",
                    "ignore_malformed": true
                },
                "category_id": {
                    "type": "keyword",
                    "ignore_above": 256
                },
                "category_code": {
                    "type": "long",
                    "ignore_malformed": true
                },
                "brand": {
                    "type": "keyword",
                    "ignore_above": 256
                },
                "price": {
                    "type": "double",
                    "ignore_malformed": true
                },
                "user_id": {
                    "type": "long",
                    "ignore_malformed": true
                },
                "user_session": {
                    "type": "keyword",
                    "ignore_above": 256
                },
                "event_time": {
                    "type": "text"
                }
            }
        }
    },
    "priority": 500,
    "composed_of": ["discount_component_template", "kaggle_component_template"],
    "version": 3,
    "_meta": {
        "description": "Template for ecommerce data from Kaggle."
    }
}